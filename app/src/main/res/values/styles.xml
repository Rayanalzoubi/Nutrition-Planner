<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 1) Your application theme, based on MaterialComponents -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- You can customize your primary/secondary colors here -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <!-- 2) TextAppearance for the “Kg” suffix (matches 24sp and black) -->
    <style name="WeightSuffix" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="LevelRadio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">8dp</item>
    </style>
    <style name="ChoiceRadio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">8dp</item>
    </style>
    <style name="ChoiceCheck">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">8dp</item>
    </style>
</resources>
