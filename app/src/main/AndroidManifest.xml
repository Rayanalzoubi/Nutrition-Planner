<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nutrition">

    <!-- Internet permission stays here under <manifest> -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="false"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">



        <!-- Your activities -->
        <activity android:name=".WeightActivity"/>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".HistoryActivity" />
        <activity android:name=".GoalActivity" />
        <activity android:name=".MedicalConditionsActivity" />
        <activity android:name=".ResultsActivity" />
        <activity android:name=".GenderActivity"/>
        <activity android:name=".AdminActivity" />
        <activity android:name=".LoginActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".ActivityLevelActivity"
            android:exported="false" />
        <activity android:name=".TallActivity"
            android:exported="false"/>
        <activity
            android:name=".FoodAllergiesActivity"
            android:exported="false" />
        <activity
            android:name=".DietaryPreferencesActivity"
            android:exported="false" />


        <activity android:name=".AgeActivity"
            android:exported="false" />
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
